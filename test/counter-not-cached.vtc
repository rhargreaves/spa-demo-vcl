test "Counter not cached"

server s1 {

	rxreq
	expect req.url == "/background"
	txresp -body "bar"

	rxreq
	expect req.url == "/counter"
	txresp -body "foo"

	rxreq
	expect req.url == "/counter"
	txresp -body "barbaz"
} -start

varnish v1 -vcl+backend {
sub vcl_fetch {
  # cache everything for 5 minutes, ignoring any cache headers
  if(req.url == "/counter") {
	set beresp.ttl = 0s;
  }
}

} -start

client c1 {
	txreq -url "/background"
	rxresp
	expect resp.bodylen == 3

	txreq -url "/background"
	rxresp
	expect resp.bodylen == 3

	txreq -url "/counter"
	rxresp
	expect resp.bodylen == 3

	txreq -url "/counter"
	rxresp
	expect resp.bodylen == 6
}

varnish v1 -expect cache_miss == 0
varnish v1 -expect cache_hit == 0

client c1 -run

varnish v1 -expect cache_miss == 3
varnish v1 -expect cache_hit == 1
